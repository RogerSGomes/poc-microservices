generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id                   String   @id @default(uuid()) @map("aluno_id")
  nome                 String   @db.VarChar(255)
  telefone             String
  email                String   @unique @db.VarChar(255)
  matricula            String   @unique @db.VarChar(10)
  senha                String   @db.VarChar(255)
  rg_numero            String   @unique @db.VarChar(12)
  rg_orgao_emissor     String   @db.VarChar(50)
  rg_uf_emissao        String   @db.VarChar(2)
  cpf                  String   @unique @db.VarChar(14)
  endereco_rua         String   @db.VarChar(255)
  endereco_numero      String   @db.VarChar(10)
  endereco_complemento String?  @db.VarChar(255)
  endereco_bairro      String   @db.VarChar(255)
  endereco_cidade      String   @db.VarChar(255)
  endereco_estado      String   @db.VarChar(2)
  endereco_cep         String   @db.VarChar(9)
  pais_origem          String   @db.VarChar(255)
  estado_origem        String   @db.VarChar(255)
  cidade_origem        String   @db.VarChar(255)
  genero               String
  estado_civil         String
  possui_deficiencia   Boolean
  data_nascimento      DateTime
  tipo_deficiencia     String?  @db.VarChar(255)
  pais_residencia      String   @db.VarChar(255)
  created_at           DateTime @default(dbgenerated("now()"))
  updated_at           DateTime @default(dbgenerated("now()"))
}
